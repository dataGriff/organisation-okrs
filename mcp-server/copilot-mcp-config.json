{
  "mcpServers": {
    "okr-agent": {
      "command": "node",
      "args": ["/workspaces/organisation-okrs/mcp-server/dist/index.js"],
      "env": {
        "OKR_API_URL": "http://localhost:8000"
      },
      "description": "OKR Agent - Query organizational objectives and key results",
      "capabilities": ["tools"]
    }
  },
  "copilotIntegration": {
    "enableMCP": true,
    "autoDiscoverServers": true,
    "defaultTimeout": 30000
  }
}
